{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends '_layout.njk' %}

{% block pageTitle %}{{ serviceName }}{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l">{{serviceName}}</h1>
    <div class="govuk-cards govuk-cards--2">
      <div class="govuk-cards--2__item govuk-card--dashboard">
        <h2 class="govuk-heading-m govuk-!-margin-bottom-2">Search</h2>
        <ul class="govuk-list">
          <li>
              <a href="/cdo/search/basic" class="govuk-link govuk-link--no-visited-state">Search dog index</a>
          </li>
        </ul>
      </div>
      <div class="govuk-cards--2__item govuk-card--dashboard">
        <h2 class="govuk-heading-m govuk-!-margin-bottom-2">New application</h2>
        <ul class="govuk-list">
          <li>
              <a href="/cdo/create/owner-details?clear=true" class="govuk-link govuk-link--no-visited-state">Process new CDO or <br>Interim Exemption</a>
          </li>
        </ul>
      </div>
      <div class="govuk-cards--2__item govuk-card--dashboard">
        <h2 class="govuk-heading-m govuk-!-margin-bottom-2">Track applications</h2>
        <ul class="govuk-list">
          <li>
              <a href="/cdo/manage" class="govuk-link govuk-link--no-visited-state">Manage CDOs and interim exemptions</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

{% endblock %}
