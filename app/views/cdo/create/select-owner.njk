{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends '_layout.njk' %}


{% block pageTitle %}{{ serviceName }}{% endblock %}

{% block beforeContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      {{ govukBackLink({
        text: "Back",
        href: model.backLink,
        attributes: {
          id: "back"
        }
        }) 
      }}
    </div>
  </div>
{% endblock %}

{% block content %}

{% if (model.addresses.length === 1) %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Confirm address</h1>
    <form method="post" novalidate autocomplete="off">
      <p>
      {% for addr in model.addresses[0] %}
      {{ addr}}<br>
      {% endfor %}
      </p>

      <input type="hidden" name="address" value="0" />

      <div class="govuk-button-group">
        {{ govukButton({
        text: "Confirm address"
        }) }}

        <a class ="govuk-link govuk-link--no-visited-state" href="{{ model.changeAddressLink }}">Change address</a>
      </div>
    </form>
  </div>
</div>

{% else %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Select an address</h1>
    <form method="post" novalidate autocomplete="off">
      <div class="govuk-form-group" id="postcode">
        <p class="govuk-body">
          <a href="{{ model.changePostcodeLink }}" class="govuk-link">Change postcode</a>
        </p>
      </div>

      {{ govukRadios(model.addresses)}}

      {{ govukButton({
        text: 'Continue'
      }) }}
    </form>

    {% if model.source == 'create' %}
    <p class="govuk-body">
      or <a class ="govuk-link" href="{{ model.addressRoute }}">enter address manually</a>.
    </p>
    {% endif %}
  </div>
</div>

{% endif %}

{% endblock %}
