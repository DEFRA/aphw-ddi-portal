{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}

{% extends '_layout.njk' %}

{% block pageTitle %}{{ serviceName }}{% endblock %}

{% block beforeContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      {{ govukBackLink({
        text: "Back",
        href: model.backLink,
        attributes: {
          id: "back"
        }
        }) 
      }}
    </div>
  </div>
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form class="form" method="post">

      <h1 class="govuk-heading-l">
        Microchip number {{ model.microchipNumber }} is in use on a current dog record with a different owner
      </h1>

      {% for result in model.results %}
        {% include "./cdo/search/dog-results.njk" %}
      {% endfor %}

      <p class="govuk-body">
        Currently you cannot transfer a dog to a new owner. You should escalate to a line manager to agree the next step.
      </p>

      <p class="govuk-body">
        If you entered the number incorrectly, <a class="govuk-link govuk-link--no-visited-state" href="/cdo/create/microchip-search">change the microchip number</a>
      </p>

    </form>
  </div>
</div>
{% endblock %}
