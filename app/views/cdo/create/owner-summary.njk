{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% extends '_layout.njk' %}

{% block pageTitle %}{{ serviceName }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-m">Confirm details</h2>

    <form method="post" action="{{ model.formAction }}">
    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Name
        </dt>
        <dd class="govuk-summary-list__value">
          {{ model.summary.owner.name }}
        </dd>
      </div>
    
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Date of birth
        </dt>
        <dd class="govuk-summary-list__value">
          {{ model.summary.owner.dateOfBirth }}
        </dd>
      </div>
    
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Address
        </dt>
        <dd class="govuk-summary-list__value">
          {{ model.summary.owner.address | join("<br>") | safe }}
        </dd>
      </div>
    </dl>

    <p class="govuk-body govuk-!-margin-bottom-7">
      <a class="govuk-link govuk-link--no-visited-state" href="/cdo/create/owner-details">Change owner details</a>                
    </p>

    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Court
        </dt>
        <dd class="govuk-summary-list__value">
          {{ model.summary.court }}
        </dd>
      </div>
      
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Police force
        </dt>
        <dd class="govuk-summary-list__value">
          {{ model.summary.policeForce }}
        </dd>
      </div>
      
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Dog legislation officer
        </dt>
        <dd class="govuk-summary-list__value">
          {{ model.summary.dogLegislationOfficer }}
        </dd>
      </div>
    </dl>

    <p class="govuk-body govuk-!-margin-bottom-7">
      <a class="govuk-link govuk-link--no-visited-state" href="/cdo/create/enforcement-details">Change court and police details</a>                
    </p>

      {% if not model.summary.error %}
        {{ govukButton({
            text: "Confirm details"
          }) }}
      {% endif %}
    </form>    
</div>

{% endblock %}
