{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% extends '_layout.njk' %}

{% block pageTitle %}{{ serviceName }}{% endblock %}

{% block beforeContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      {{ govukBackLink({
        text: "Back",
        href: model.backLink,
        attributes: {
          id: "back"
        }
        }) 
      }}
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post">
        <h1 class="govuk-heading-l">Delete dog details</h1>

        <p class="govuk-body">Confirm you want to delete these dog details.</p>

        <dl class="govuk-summary-list">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">Breed</dt>
            <dd class="govuk-summary-list__value">{{ model.dog.breed }}</dd>
          </div>
          {% if model.dog.name | length  %}
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">Name</dt>
              <dd class="govuk-summary-list__value">{{ model.dog.name }}</dd>
            </div>
          {% endif %}
          {% if model.dog.microchipNumber %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">Microchip number</dt>
            <dd class="govuk-summary-list__value">{{ model.dog.microchipNumber }}</dd>
          </div>
          {% endif %}
          {% if model.dog.cdoIssued %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">CDO issued</dt>
            <dd class="govuk-summary-list__value">{{ model.dog.cdoIssued }}</dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">CDO expiry</dt>
            <dd class="govuk-summary-list__value">{{ model.dog.cdoExpiry }}</dd>
          </div>
          {% else %}
              <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Joined interim exemption scheme</dt>
                <dd class="govuk-summary-list__value">{{ model.dog.interimExemption }}</dd>
              </div>
          {% endif %}
        </dl>

        <input type="hidden" name="dogId" value="{{ model.dog.id }}">
          
        <div class="govuk-button-group">
          {{ govukButton({
            text: "Delete dog details"
          }) }}

        <a class="govuk-link govuk-link--no-visited-state" href="{{ model.backLink }}">Cancel</a>
      </form>
    </div>
  </div>
{% endblock %}
