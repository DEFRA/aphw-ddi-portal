{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends '_layout.njk' %}

{% block pageTitle %}{{ serviceName }}{% endblock %}

{% block beforeContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      {{ govukBackLink({
        text: "Back",
        href: model.backLink,
        attributes: {
          id: "back"
        }
        }) 
      }}
    </div>
  </div>
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-m">Search</h2>

    <form method="post" action="{{ model.formAction }}">

      {{ govukInput(model.searchTerms) }}

      {{ govukRadios(model.searchType) }}

      {{ govukButton({
        text: "Search",
        value: "primary"
      }) }}

    </form>    

    {% if model.results.items.length > 0 %}
    <table class="govuk-table">
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th scope="col" class="govuk-table__header" colspan="3">
          {% if model.searchType.value == "dog" %}
          {{ "1 dog record" if model.results.items.length == 1 else model.results.items.length + " dog records" }}
          {% else %}
          {{ "1 owner record" if model.results.items.length == 1 else model.results.items.length + " owner records" }}
          {% endif %}
          </th>
        </tr>
      </thead>
      <tbody class="govuk-table__body">
      </tbody>
    </table>
      {% for result in model.results.items %}
        {% if model.searchType.value == "dog" %}
    <div class="govuk-summary-card">
      <div class="govuk-summary-card__title-wrapper govuk-!-padding-top-2 govuk-!-padding-bottom-1">
        <h2 class="govuk-summary-card__title defra-summary-header"><a class="govuk-link govuk-link--no-underline govuk-link--no-visited-state" href="">
            <a class="govuk-link govuk-link--no-visited-state" href="/cdo/dog/{{ result.dogId }}">
                    ED{{ result.dogIndex }}
            </a>
        </h2>
        <ul class="govuk-summary-card__actions govuk-!-font-weight-regular">
          <strong class="govuk-tag">Exempt</strong>
        </ul>
      </div>
      <div class="govuk-summary-card__content govuk-!-padding-top-1 govuk-!-padding-bottom-0">
        <table class="govuk-table govuk-!-margin-bottom-3">
          <caption class="govuk-table__caption govuk-!-font-weight-regular govuk-!-font-size-16">
          </caption>
          <thead class="govuk-table__head govuk-!-font-size-16">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">
                    Dog name
              </th>
              <th scope="col" class="govuk-table__header govuk-!-width-one-third">
                    Owner name
              </th>
              <th scope="col" class="govuk-table__header">
                    Microchip number
              </th>
            </tr>
          </thead>
 
          <tbody class="govuk-table__body">
            <tr class="govuk-table__row govuk-!-font-size-16 govuk-!-margin-bottom-0">
              <td class="govuk-!-padding-top-2 govuk-!-padding-bottom-0">
                  {{ result.dogName }}
              </td>
              <td class="govuk-!-padding-top-2 govuk-!-padding-bottom-0">
                <a class="govuk-link govuk-link--no-visited-state" href="/cdo/person/{{ result.personId }}">
                      {{ result.firstName }} {{ result.lastName }}
                </a>
              </td>
              <td class="govuk-!-padding-top-2 govuk-!-padding-bottom-0">
                      {{ result.microchipNumber }}
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    {% else %}
    <div class="govuk-summary-card">
      <div class="govuk-summary-card__title-wrapper govuk-!-padding-top-2 govuk-!-padding-bottom-1">
        <h2 class="govuk-summary-card__title defra-search-header"><a class="govuk-link govuk-link--no-underline govuk-link--no-visited-state" href="">
            <a class="govuk-link govuk-link--no-visited-state" href="/cdo/person/{{ result.personId }}">
                    {{ result.firstName }} {{ result.lastName }}
            </a>
        </h2>
        <ul class="govuk-summary-card__actions govuk-!-font-weight-regular">
          <li class="defra-search-header govuk-!-font-size-16">
                {{ result.address }}
          </li>
        </ul>
      </div>
      <div class="govuk-summary-card__content govuk-!-padding-top-1 govuk-!-padding-bottom-0">
        <table class="govuk-table govuk-!-margin-bottom-3">
          <caption class="govuk-table__caption govuk-!-font-weight-regular govuk-!-font-size-16">
          </caption>
          <thead class="govuk-table__head govuk-!-font-size-16">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">
                    Dog record
              </th>
              <th scope="col" class="govuk-table__header govuk-!-width-one-third">
                    Dog name
              </th>
              <th scope="col" class="govuk-table__header">
                    Microchip number
              </th>
            </tr>
          </thead>
 
          <tbody class="govuk-table__body">
          {% for dog in result.dogs %}
            <tr class="govuk-table__row govuk-!-font-size-16 govuk-!-margin-bottom-0">
              <td class="govuk-!-padding-top-2 govuk-!-padding-bottom-0">
                <a class="govuk-link govuk-link--no-visited-state" href="/cdo/dog/{{ dog.dogId }}">
                        ED{{ dog.dogIndex }}
                </a>
              </td>
              <td class="govuk-!-padding-top-2 govuk-!-padding-bottom-0">
                      {{ dog.dogName }}
              </td>
              <td class="govuk-!-padding-top-2 govuk-!-padding-bottom-0">
                      {{ dog.microchipNumber }}
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
    {% endif %}
    {% endfor %}
    {% else %}
      <p>No results found</p>
    {% endif %}
{% endblock %}
